<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= title %></title>
        <%- include('../../../partials/head') %>
    </head>
    <body class="bg-light">
        <%- include('../../../partials/nav_admin') %>

        <main class="container p-5">
            <h2 class="text-center text-secondary mb-5"><%= title %></h2>

            <!-- Add Carrera Button -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <p class="m-0"></p>
                <a href="/admin/carrera/create" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Agregar Carrera
                </a>
            </div>

            <!-- Error Alert -->
            <% if (error) { %>
            <div
                class="alert alert-danger alert-dismissible fade show mb-4"
                role="alert"
            >
                <strong>Error!</strong> <%= error.message %>
                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="alert"
                    aria-label="Close"
                ></button>
            </div>
            <% } %>

            <!-- Carrera Table -->
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-secondary text-center">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Clave</th>
                                <th scope="col">Nombre</th>
                                <th scope="col" colspan="2">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% carreras.forEach(carrera => { %>
                            <tr class="text-center align-middle">
                                <td><%= carrera.carrera_id %></td>
                                <td><%= carrera.carrera_clave %></td>
                                <td><%= carrera.carrera_nombre %></td>
                                <td>
                                    <a
                                        class="btn btn-outline-success btn-sm"
                                        href="/admin/carrera/update/<%= carrera.carrera_id %>"
                                    >
                                        <i class="bi bi-pencil"></i> Actualizar
                                    </a>
                                </td>
                                <td>
                                    <a
                                        class="btn btn-outline-danger btn-sm"
                                        href="/admin/carrera/delete/<%= carrera.carrera_id %>"
                                    >
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>

        <%- include('../../../partials/footer') %>
    </body>
</html>
