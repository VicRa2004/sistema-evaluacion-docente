<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= title %></title>
        <%- include('../../partials/head') %>
    </head>
    <body class="bg-light">
        <%- include('../../partials/nav_admin') %>

        <main class="container p-5">
            <div class="d-flex justify-content-center">
                <div
                    class="card border-0 shadow-lg rounded-4"
                    style="max-width: 600px"
                >
                    <div class="card-body p-5">
                        <h2 class="text-center text-secondary mb-4">
                            <%= title %>
                        </h2>

                        <% if (error) { %>
                        <div
                            class="alert alert-danger alert-dismissible fade show mb-4"
                            role="alert"
                        >
                            <strong>Error!</strong> <%= error.message %>
                            <button
                                type="button"
                                class="btn-close"
                                data-bs-dismiss="alert"
                                aria-label="Close"
                            ></button>
                        </div>
                        <% } %>

                        <form method="post" action="/admin/evaluaciones/new">
                            <div class="mb-4">
                                <label for="eva_descripcion" class="form-label"
                                    >Descripcion</label
                                >
                                <input
                                    name="eva_descripcion"
                                    id="eva_descripcion"
                                    type="text"
                                    class="form-control border-secondary shadow-sm"
                                    required
                                />
                            </div>

                            <input
                                type="hidden"
                                name="id_profesor"
                                value="<%= formData.id_profesor %>"
                            />

                            <input
                                type="hidden"
                                name="id_grupo"
                                value="<%= formData.id_grupo %>"
                            />

                            <div class="d-grid">
                                <button
                                    type="submit"
                                    class="btn btn-secondary shadow-sm"
                                >
                                    Agregar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>

        <%- include('../../partials/footer') %>
    </body>
</html>
